<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_language_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/bg_list_item_surface"
    android:padding="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image_language_selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_round_check_circle"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_language_name"
            style="@style/Widget.Grocy.TextView.ListItem.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:minHeight="20dp"
            android:gravity="bottom">

            <TextView
                android:id="@+id/text_language_translators"
                style="@style/Widget.Grocy.TextView.ListItem.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>