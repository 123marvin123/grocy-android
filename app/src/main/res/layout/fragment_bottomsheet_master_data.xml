<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:text="Manage master data"
            android:textAppearance="@style/TextAppearance.Grocy.BottomSheet.Title"/>

    </LinearLayout>

    <View
        style="@style/Theme.Grocy.Divider"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:ignore="UseCompoundDrawables">

            <LinearLayout
                android:id="@+id/linear_master_data_products"
                style="@style/Theme.Grocy.DrawerItem">

                <ImageView
                    style="@style/Theme.Grocy.DrawerItem.Icon"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_round_widgets" />

                <TextView
                    android:id="@+id/text_master_data_products"
                    style="@style/Theme.Grocy.DrawerItem.Text"
                    android:text="Products" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_master_data_locations"
                style="@style/Theme.Grocy.DrawerItem">

                <ImageView
                    style="@style/Theme.Grocy.DrawerItem.Icon"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_round_place" />

                <TextView
                    android:id="@+id/text_master_data_locations"
                    style="@style/Theme.Grocy.DrawerItem.Text"
                    android:text="@string/property_locations" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_master_data_stores"
                style="@style/Theme.Grocy.DrawerItem">

                <ImageView
                    style="@style/Theme.Grocy.DrawerItem.Icon"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_round_store" />

                <TextView
                    android:id="@+id/text_master_data_stores"
                    style="@style/Theme.Grocy.DrawerItem.Text"
                    android:text="@string/property_stores" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_master_data_quantity_units"
                style="@style/Theme.Grocy.DrawerItem">

                <ImageView
                    style="@style/Theme.Grocy.DrawerItem.Icon"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_round_weights" />

                <TextView
                    android:id="@+id/text_master_data_quantity_units"
                    style="@style/Theme.Grocy.DrawerItem.Text"
                    android:text="@string/property_quantity_units" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_master_data_product_groups"
                style="@style/Theme.Grocy.DrawerItem">

                <ImageView
                    style="@style/Theme.Grocy.DrawerItem.Icon"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_round_category" />

                <TextView
                    android:id="@+id/text_master_data_product_groups"
                    style="@style/Theme.Grocy.DrawerItem.Text"
                    android:text="@string/property_product_groups" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>