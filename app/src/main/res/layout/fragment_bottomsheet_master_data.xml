<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:text="Manage master data"
            android:textAppearance="@style/TextAppearance.Grocy.BottomSheet.Title"/>

    </LinearLayout>

    <View
        style="@style/Theme.Grocy.Divider"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/linear_master_data_products"
                style="@style/Theme.Grocy.ListItem.SingleLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_widgets"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/Theme.Grocy.ListItem.Title"
                    android:text="Products" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_master_data_locations"
                style="@style/Theme.Grocy.ListItem.SingleLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_location_on"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/Theme.Grocy.ListItem.Title"
                    android:text="Locations" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_master_data_stores"
                style="@style/Theme.Grocy.ListItem.SingleLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_store"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/Theme.Grocy.ListItem.Title"
                    android:text="Stores" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_master_data_quantity_units"
                style="@style/Theme.Grocy.ListItem.SingleLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_scale_anim"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/Theme.Grocy.ListItem.Title"
                    android:text="Quantity units" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_master_data_product_groups"
                style="@style/Theme.Grocy.ListItem.SingleLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_category"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/Theme.Grocy.ListItem.Title"
                    android:text="Product groups" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>