<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:text="Batch mode configuration"
            android:textAppearance="@style/TextAppearance.Grocy.BottomSheet.Title"/>

    </LinearLayout>

    <View
        style="@style/Theme.Grocy.Divider"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_batch_config_bbd"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_event"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="Ask for best before date" />

                    <TextView
                        android:id="@+id/text_batch_config_bbd"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_price"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_money"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="Ask for price" />

                    <TextView
                        android:id="@+id/text_batch_config_price"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_store"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_store"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="Ask for store" />

                    <TextView
                        android:id="@+id/text_batch_config_store"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_location"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_location_on"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="Ask for location" />

                    <TextView
                        android:id="@+id/text_batch_config_location"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_stock_location"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_location_on"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="Ask for stock location" />

                    <TextView
                        android:id="@+id/text_batch_config_stock_location"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_batch_config_specific"
                style="@style/Theme.Grocy.ListItem.TwoLine.Icon.Clickable"
                android:background="@drawable/bg_list_item_surface">

                <ImageView
                    style="@style/Theme.Grocy.ListItem.Icon"
                    android:src="@drawable/ic_round_gps_fixed"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Grocy.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Grocy.ListItem.OverLine"
                        android:text="Ask for specific item" />

                    <TextView
                        android:id="@+id/text_batch_config_specific"
                        style="@style/Theme.Grocy.ListItem.Title"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>