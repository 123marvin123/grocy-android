<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinate_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="32dp"
                android:paddingEnd="0dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="16dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/on_background_variant">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/on_background"
                        android:textAppearance="@style/TextAppearance.Grocy.ListItem.Description"
                        android:text="Welcome to Grocy Android!
                \n\nTo use grocy productively you have to host your own instance on a server.
\nIf you just want to try out this app you can use the demo instance from Bernd Bestel, the creator of grocy."/>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="48dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_round_grocy_color"
                    tools:ignore="ContentDescription" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/on_background_variant"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:contentPadding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please select one option from below."
                        android:textAppearance="@style/TextAppearance.Grocy.ListItem.Description"
                        android:textColor="@color/on_background" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/demo_instance"
                        style="@style/Widget.Grocy.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Demo instance" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/own_instance"
                        style="@style/Widget.Grocy.Button.UnelevatedButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Own instance" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <xyz.zedler.patrick.grocy.view.ActionButton
                        android:id="@+id/button_login_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_round_feedback_anim"
                        app:tint="@color/icon" />

                    <xyz.zedler.patrick.grocy.view.ActionButton
                        android:id="@+id/button_login_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_round_help_outline_anim"
                        app:tint="@color/icon" />

                    <xyz.zedler.patrick.grocy.view.ActionButton
                        android:id="@+id/button_login_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_round_info_outline_anim"
                        app:tint="@color/icon" />

                    <xyz.zedler.patrick.grocy.view.ActionButton
                        android:id="@+id/button_login_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_round_open_in_browser_anim"
                        app:tint="@color/icon" />

                    <xyz.zedler.patrick.grocy.view.ActionButton
                        android:id="@+id/button_login_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_round_settings_anim"
                        app:tint="@color/icon" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>