<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- SNACKBAR -->
    <!-- TODO: try to set button text color in style instead of programmatically -->

    <style
        name="Widget.Grocy.Button.TextButton.Snackbar"
        parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:fontFamily">@font/jost_bold</item>
    </style>

    <!-- TOOLBAR MENU BUTTON -->

    <style
        name="Widget.Grocy.ActionButton.OverFlow"
        parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/icon</item>
    </style>

    <!-- DRAWER -->

    <style name="Widget.Grocy.LinearLayout.Drawer" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_drawer_item_ripple</item>
    </style>

    <style name="Widget.Grocy.ImageView.Drawer" parent="">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <!-- CARD -->

    <style name="Widget.Grocy.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stateListAnimator">@animator/card_elevation</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/background</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/stroke_secondary</item>
        <item name="rippleColor">@color/highlight_secondary</item>
    </style>

    <style name="Widget.Grocy.Card.Filled" parent="Widget.Grocy.Card">
        <item name="cardBackgroundColor">@color/on_background_variant</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- TEXT INPUT -->
    <!-- TODO: remove unused attributes -->

    <style
        name="Widget.Grocy.TextInputLayout.FilledBox"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxBackgroundColor">@color/on_background_tertiary</item>
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="android:textColorHint">@color/on_background_secondary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorIconDrawable">@drawable/ic_round_error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
    </style>

    <style
        name="Widget.Grocy.TextInputLayout.FilledBox.DropDown"
        parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxBackgroundColor">@color/on_background_tertiary</item>
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="android:textColorHint">@color/on_background_secondary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorIconDrawable">@drawable/ic_round_error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
    </style>

    <style
        name="Widget.Grocy.TextInputLayout.FilledBox.Dense"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/on_background_tertiary</item>
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="android:textColorHint">@color/on_background_secondary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorIconDrawable">@drawable/ic_round_error</item>
        <item name="hintTextColor">@color/transparent</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
    </style>

    <style
        name="Widget.Grocy.TextInputEditText.FilledBox.Dense"
        parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:padding">8dp</item>
    </style>

    <!-- DIVIDER -->
    <!-- TODO: rename to Widget.Grocy.Divider -->

    <style name="Theme.Grocy.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/stroke_secondary</item>
    </style>

    <!-- SWITCH -->

    <style name="Widget.Grocy.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- TAB LAYOUT -->

    <style
        name="Widget.Grocy.TabLayout.PageIndicator"
        parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/primary</item>
        <item name="tabIndicatorColor">@color/secondary</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@color/highlight</item>
    </style>

    <!-- BUTTON -->

    <style
        name="Widget.Grocy.Button.OutlinedButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/secondary_translucent</item>
        <item name="iconTint">@color/icon</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="strokeColor">@color/stroke_secondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style
        name="Widget.Grocy.Button.UnelevatedButton"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/highlight_on_secondary</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="backgroundTint">@color/button_bg_color_selector</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style
        name="Widget.Grocy.Button.TextButton"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/secondary_translucent</item>
        <item name="android:textColor">@color/button_text_color_secondary_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <!-- PROGRESS BAR -->

    <style
        name="Widget.Grocy.ProgressBar.Horizontal"
        parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">4dp</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
    </style>

    <style
        name="Widget.Grocy.ProgressBar.Horizontal.Red"
        parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">4dp</item>
        <item name="android:progressDrawable">@drawable/progress_bar_red</item>
    </style>

    <style
        name="Widget.Grocy.ProgressBar.Horizontal.Green"
        parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">4dp</item>
        <item name="android:progressDrawable">@drawable/progress_bar_green</item>
    </style>

    <style
        name="Widget.Grocy.ProgressBar.Circular"
        parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:progressDrawable">@drawable/progress_bar_circular</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_circular</item>
    </style>

    <!-- LIST -->

    <style name="Widget.Grocy.LinearLayout.ListItem" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.Clickable"
        parent="Widget.Grocy.LinearLayout.ListItem">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_list_item</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.SingleLine"
        parent="Widget.Grocy.LinearLayout.ListItem">
        <item name="android:minHeight">48dp</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.SingleLine.Icon"
        parent="Widget.Grocy.LinearLayout.ListItem.SingleLine">
        <item name="android:minHeight">56dp</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.SingleLine.Clickable"
        parent="Widget.Grocy.LinearLayout.ListItem.SingleLine">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_list_item</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.SingleLine.Icon.Clickable"
        parent="Widget.Grocy.LinearLayout.ListItem.SingleLine.Icon">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_list_item</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.TwoLine"
        parent="Widget.Grocy.LinearLayout.ListItem">
        <item name="android:minHeight">64dp</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.TwoLine.Icon"
        parent="Widget.Grocy.LinearLayout.ListItem.TwoLine">
        <item name="android:minHeight">72dp</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.TwoLine.Clickable"
        parent="Widget.Grocy.LinearLayout.ListItem.TwoLine">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_list_item</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.TwoLine.Icon.Clickable"
        parent="Widget.Grocy.LinearLayout.ListItem.TwoLine.Icon">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_list_item</item>
    </style>

    <style name="Widget.Grocy.LinearLayout.ListItem.TextBox" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style
        name="Widget.Grocy.LinearLayout.ListItem.TextBox.Stretch"
        parent="Widget.Grocy.LinearLayout.ListItem.TextBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Widget.Grocy.ImageView.ListItem.Icon" parent="">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style
        name="Widget.Grocy.ImageView.ListItem.Icon.Top"
        parent="Widget.Grocy.ImageView.ListItem.Icon">
        <item name="android:layout_gravity">start|top</item>
    </style>

    <!-- RADIO BUTTON -->

    <style
        name="Widget.Grocy.RadioButton"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:fontFamily">@font/jost_book</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Grocy.RadioButton.BottomSheet" parent="Widget.Grocy.RadioButton">
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="Widget.Grocy.RadioButton.Dense" parent="Widget.Grocy.RadioButton">
        <item name="android:minHeight">38dp</item>
    </style>

    <!-- CHECK BOX -->

    <style name="Widget.Grocy.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Grocy.CheckBox.Dense" parent="Widget.Grocy.CheckBox">
        <item name="android:minHeight">24dp</item>
    </style>

    <!-- TOOLTIP -->

    <style name="Widget.Grocy.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/tooltip_background</item>
        <item name="android:textAppearance">@style/TextAppearance.Grocy.Tooltip</item>
    </style>

    <!-- SHAPE -->

    <style name="Shape.Grocy.BottomSheet" parent="">
        <item name="android:background">@drawable/bg_shape_bottom_sheet</item>
    </style>

    <!-- TEXT -->

    <style name="Widget.Grocy.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">15.5sp</item>
        <item name="android:lineSpacingExtra">-1.5sp</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/jost_book</item>
    </style>

    <style name="Widget.Grocy.TextView.Paragraph" parent="Widget.Grocy.TextView">
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
        <item name="android:breakStrategy" tools:targetApi="m">high_quality</item>
        <item name="android:hyphenationFrequency" tools:targetApi="m">full</item>
    </style>

    <style name="Widget.Grocy.TextView.Toolbar" parent="Widget.Grocy.TextView">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textSize" tools:ignore="SpUsage">21.5dp</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.Grocy.TextView.OfflineIndicator" parent="Widget.Grocy.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/jost_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Grocy.TextView.ShoppingModeGroup" parent="Widget.Grocy.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="android:textColor">@color/retro_green_fg</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.Grocy.TextView.Help" parent="Widget.Grocy.TextView.Paragraph">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.Grocy.TextView.Title" parent="Widget.Grocy.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Widget.Grocy.TextView.Title.BottomSheet" parent="Widget.Grocy.TextView.Title">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Widget.Grocy.TextView.Category" parent="Widget.Grocy.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:fontFamily">@font/jost_bold</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Widget.Grocy.TextView.ListItem.OverLine" parent="Widget.Grocy.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_background_secondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.Grocy.TextView.ListItem.Title" parent="Widget.Grocy.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16.5sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style
        name="Widget.Grocy.TextView.ListItem.Title.Stock"
        parent="Widget.Grocy.TextView.ListItem.Title">
        <item name="android:fontFamily">@font/jost_medium</item>
    </style>

    <style name="Widget.Grocy.TextView.ListItem.Description" parent="Widget.Grocy.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/on_background_secondary</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="Widget.Grocy.TextView.DrawerItem" parent="Widget.Grocy.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">@font/jost_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Grocy.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/tooltip_text</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/jost_book</item>
    </style>

</resources>