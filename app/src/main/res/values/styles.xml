<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- TOOLBAR MENU BUTTON -->

  <style name="Widget.Grocy.ActionButton.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
    <item name="android:tint">@color/icon</item>
  </style>

  <!-- RECYCLER VIEW -->

  <style name="Widget.Grocy.RecyclerView" parent="">
    <item name="android:scrollbars">vertical</item>
    <item name="android:scrollbarThumbVertical">@drawable/shape_scrollbar_rounded</item>
    <item name="android:background">@color/transparent</item>
  </style>

  <!-- DRAWER -->

  <style name="Widget.Grocy.LinearLayout.Drawer" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:clickable">true</item>
    <item name="android:background">@drawable/bg_drawer_item_ripple</item>
  </style>

  <style name="Widget.Grocy.ImageView.Drawer" parent="">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:layout_marginEnd">32dp</item>
  </style>

  <!-- PROGRESS BAR -->

  <style
    name="Widget.Grocy.ProgressBar.Horizontal"
    parent="@android:style/Widget.ProgressBar.Horizontal">
    <item name="android:layout_height">4dp</item>
    <item name="android:progressDrawable">@drawable/progress_bar</item>
  </style>

  <style
    name="Widget.Grocy.ProgressBar.Horizontal.Green"
    parent="@android:style/Widget.ProgressBar.Horizontal">
    <item name="android:layout_height">4dp</item>
    <item name="android:progressDrawable">@drawable/progress_bar_green</item>
  </style>

  <style name="Widget.Grocy.ProgressBar.Circular" parent="@android:style/Widget.ProgressBar.Large">
    <item name="android:progressDrawable">@drawable/progress_bar_circular</item>
    <item name="android:indeterminateDrawable">@drawable/progress_bar_circular</item>
  </style>

  <style
    name="Widget.Grocy.ImageView.ListItem.Icon.Top"
    parent="Widget.Grocy.ImageView.ListItem.Icon">
    <item name="android:layout_gravity">start|top</item>
  </style>

  <!-- RADIO BUTTON -->

  <style name="Widget.Grocy.RadioButton.BottomSheet" parent="Widget.Grocy.RadioButton">
    <item name="android:textSize">16.5sp</item>
  </style>

  <style name="Widget.Grocy.RadioButton.Dense" parent="Widget.Grocy.RadioButton">
    <item name="android:minHeight">38dp</item>
  </style>

  <!-- SHAPE -->

  <style name="Shape.Grocy.BottomSheet" parent="">
    <item name="android:background">@drawable/bg_shape_bottom_sheet</item>
  </style>

  <!-- TEXT -->

  <style name="Widget.Grocy.TextView.Toolbar.BottomSheet" parent="Widget.Grocy.TextView.Toolbar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style
    name="Widget.Grocy.TextView.Toolbar.BottomSheet.Center"
    parent="Widget.Grocy.TextView.Toolbar.BottomSheet">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="Widget.Grocy.TextView.Title" parent="Widget.Grocy.TextView.Medium">
    <item name="android:textSize">18sp</item>
    <item name="singleLine">true</item>
  </style>

  <style name="Widget.Grocy.TextView.Title.BottomSheet" parent="Widget.Grocy.TextView">
    <item name="android:textSize" tools:ignore="SpUsage">21.5dp</item>
    <item name="android:fontFamily">@font/jost_medium</item>
  </style>

  <style name="Widget.Grocy.TextView.ListItem.Title.Stock" parent="Widget.Grocy.TextView.Title">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16.5sp</item>
    <item name="android:maxLines">2</item>
  </style>

  <!-- TEXT APPEARANCE -->

  <style name="TextAppearance.Grocy.Error" parent="TextAppearance.Design.Error">
    <item name="fontFamily">@font/jost_medium</item>
  </style>

  <style name="TextAppearance.Grocy.Chip" parent="TextAppearance.MaterialComponents.Body1">
    <item name="fontFamily">@font/jost_medium</item>
  </style>

  <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Dialog.Alert">
    <item name="android:colorBackground">@color/surface</item>
    <item name="android:textColor">@color/on_surface</item>
    <item name="android:textColorPrimary">@color/on_surface</item>
    <item name="textColorAlertDialogListItem">@color/on_surface</item>
    <item name="fontFamily">@font/jost_book</item>
    <item name="android:windowAnimationStyle">@style/DialogFadeAnimation</item>
    <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButtonStyle</item>
    <item name="buttonBarPositiveButtonStyle">@style/Widget.Grocy.Button.UnelevatedButton</item>
    <item name="buttonBarStyle">@style/AlertDialogButtonBarStyle</item>
    <item name="colorAccent">@color/retro_green</item>
    <item name="android:colorAccent">@color/retro_green</item>
  </style>

  <style name="AlertDialogCustomWithNegativeOnly" parent="AlertDialogCustom">
    <item name="buttonBarNegativeButtonStyle">@style/Widget.Grocy.Button.OutlinedButton</item>
  </style>

  <style name="DialogFadeAnimation" parent="@android:style/Animation.Activity">
    <item name="android:windowEnterAnimation">@anim/fade_in</item>
    <item name="android:windowShowAnimation">@anim/fade_in</item>
    <item name="android:windowExitAnimation">@anim/fade_out</item>
    <item name="android:windowHideAnimation">@anim/fade_out</item>

  </style>

  <style name="AlertDialogNegativeButtonStyle" parent="Widget.Grocy.Button.OutlinedButton">
    <item name="android:layout_marginEnd">8dp</item>
  </style>

  <style name="AlertDialogButtonBarStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:layout_marginBottom">8dp</item>
  </style>

</resources>